# Description: MIDI/Audio sequencer with recording and editing capabilities
# URL:         http://www.muse-sequencer.org
# Maintainer:  Vitaly Sinilin, vs at kp4 dot ru
# Depends on:  qt3 fluidsynth

name=muse
version=1.0
release=2
source=(http://dl.sf.net/sourceforge/l$name/$name-$version.tar.gz \
        $name-$version-destdir.patch)

build() {
    cd $name-$version

    patch -p1 < $SRC/$name-$version-destdir.patch
    unset CFLAGS
    export QTDIR=/usr/share/qt3

    ./configure \
         --prefix=/usr \
         --enable-optimize

    make
    make DESTDIR=$PKG install

    rm -r $PKG/usr/share/muse/{html,locale}
}
