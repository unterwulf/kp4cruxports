# Description: Simple network service spawner
# URL:         http://www.acme.com/software/micro_inetd/
# Maintainer:  Vitaly Sinilin, vs at kp4 dot ru

name=micro_inetd
version=29jun2005
release=1
source=(http://www.acme.com/software/$name/${name}_$version.tar.gz)

build() {
    cd $name

    make

    install -d $PKG/usr/bin $PKG/usr/man/man1
    install -m 755 $name $PKG/usr/bin/$name
    install -m 644 $name.1 $PKG/usr/man/man1/$name.1
}
