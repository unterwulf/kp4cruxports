# Description: ED2K and Kademlia client (daemon build)
# URL:         http://www.amule.org
# Packager:    Vitaly Sinilin, vs at kp4 dot ru
# Depends on:  wxbase crypto++

name=amuled
version=2.2.6
release=1
source=(http://download.berlios.de/amule/aMule-$version.tar.bz2)

build() {
    cd aMule-$version
    export CFLAGS="${CFLAGS//-fstack-protector/}"
    export CXXFLAGS="${CXXFLAGS//-fstack-protector/}"
    ./configure \
        --prefix=/usr \
        --mandir=/usr/man \
        --disable-monolithic \
        --enable-amule-daemon \
        --disable-ed2k \
        --disable-amulecmd \
        --disable-webserver \
        --disable-nls

    make
    make install DESTDIR=$PKG
    rm -rf $PKG/usr/{share,man,lib,bin/autostart-xas}
}
